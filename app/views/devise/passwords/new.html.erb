<div class="login-container d-flex flex-column">
  <div class="signinSection">
    <div class="info-forgot">
      <div>
        <i class="fas fa-10x fa-globe" id="globe-img"></i>
      </div>
      <p>The Future Is Here</p>
    </div>

    <div class="form-group">
      <div>
        <h2 id="login-title">Forgot your password?</h2>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <div class="signinForm">
          <ul class="noBullet">
            <li class="inputFields" id="email">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>

            <li  id="forgot-btn" class="btn-submit rounded">
              <%= f.button :submit, "Send me instructions" %>
            </li>
          </ul>
        </div>
      <% end %>
      <div class="shared-links d-flex" id="links-forget-page">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
